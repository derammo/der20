{
    "compilerOptions": {
        "target": "ES6",
        "module": "amd",
        "moduleResolution": "node",
        "removeComments": false,
        "preserveConstEnums": true,
        "rootDir": "src",
        "outDir": "build",
        "outFile": "build/lib_only.js",
        "sourceMap": true,
        "allowJs": true,
        "baseUrl": "src",
        "strictFunctionTypes": true,
        "strictNullChecks" : false,
        "listFiles": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false 
    },
    "compileOnSave": true,
    "include": [ "src/derlib/**/*.ts", "src/sys/loader.js", "src/types/*.d.ts" ],
    "exclude": [ "node_modules" ]
}